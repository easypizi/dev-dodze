{
  "name": "@dev-dodze/root",
  "private": true,
  "workspaces": [
    "packages/apps/*",
    "packages/tools/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">8.0.0"
  },
  "scripts": {
    "build": "lerna run build --concurrency=4",
    "watch": "lerna run watch --parallel --stream",
    "version-update": "lerna version --no-git-tag-version --no-push",
    "lint": "lerna run lint --stream --concurrency=5",
    "clean": "lerna clean",
    "web:start": "lerna run start --scope=@dev-dodze/main"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lerna": "^7.1.5",
    "typescript": "^5.1.6",
    "vite": "^5.0.0"
  },
  "overrides": {
    "typescript": "^5.1.6"
  }
}
